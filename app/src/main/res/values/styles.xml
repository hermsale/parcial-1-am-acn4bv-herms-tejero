<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Botón de acción destructiva (Vaciar carrito, eliminar, etc.) -->
    <style name="Widget.Parcial1.DangerButton" parent="Widget.Parcial1.BrandButton">
        <item name="backgroundTint">@color/brand_red</item>
        <item name="rippleColor">@color/brand_red_dark</item>
    </style>


    <!-- Estilo para el título principal de la pantalla de Login -->
    <style name="LoginTitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/brand_brown_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <!-- Estilo base para los campos de texto del formulario de Login -->
    <style name="LoginInputStyle">
        <!-- width/height los pondremos directamente en el XML -->
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/input_background</item>
        <item name="android:textColor">@color/brand_text_primary</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Estilo para el botón principal de Login -->
    <style name="LoginButtonStyle">
        <!-- width/height los pondremos directamente en el XML -->
        <item name="android:padding">12dp</item>
        <item name="android:background">@color/brand_orange</item>
        <item name="android:textColor">@color/brand_text_on_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- Botón secundario para acciones como "Crear cuenta" en el Login -->
    <style name="LoginSecondaryButtonStyle">
        <item name="android:padding">12dp</item>
        <!-- con lo siguiente. detengo el themes por defecto que pinta el boton -->
        <item name="backgroundTint">@null</item>
        <item name="android:background">@color/brand_orange_dark</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:elevation">2dp</item>
    </style>


</resources>