<?xml version="1.0" encoding="utf-8"?>
<!--
  Archivo: activity_signup.xml
  Ubicación: app/src/main/res/layout/

  Responsabilidad:
    - Definir el diseño visual de la pantalla de creación de cuenta (Signup).
    - Contener los campos necesarios para registrar un usuario nuevo.
    - Formar parte del flujo inicial de autenticación del usuario.

  Alcance:
    - Usado por SignupActivity como layout principal.
    - Se integra con el backend de registro o lógica local según corresponda.

  Estructura visual:
    - ConstraintLayout como contenedor raíz.
    - Fondo general con color crema de la marca (@color/brand_background).
    - LinearLayout centrado con:
        ▪ TextView para el título "Crear cuenta".
        ▪ EditText para nombre completo.
        ▪ EditText para email.
        ▪ EditText para contraseña.
        ▪ EditText para confirmar contraseña.
        ▪ Button para enviar la solicitud de creación de usuario.

  Relación con otros recursos:
    - Usa estilos definidos en styles.xml (LoginTitleText, LoginInputStyle, LoginButtonStyle).
    - Los campos de texto utilizan el fondo input_background.xml.
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootSignup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_background"
    android:padding="24dp">

    <!--    navbar publico-->
    <include
        android:id="@+id/includeNavbar"
        layout="@layout/include_navbar_public"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenedor principal del formulario -->
    <LinearLayout
        android:id="@+id/signupContainer"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Título de la pantalla -->
        <TextView
            android:id="@+id/tvSignupTitle"
            style="@style/LoginTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear cuenta" />

        <!-- Campo de nombre -->
        <EditText
            android:id="@+id/etName"
            style="@style/LoginInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre completo"
            android:inputType="textPersonName" />

        <!-- Campo de email -->
        <EditText
            android:id="@+id/etSignupEmail"
            style="@style/LoginInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <!-- Campo de contraseña -->
        <EditText
            android:id="@+id/etSignupPassword"
            style="@style/LoginInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword" />

        <!-- Confirmar contraseña -->
        <EditText
            android:id="@+id/etSignupConfirmPassword"
            style="@style/LoginInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmar contraseña"
            android:inputType="textPassword" />

        <!-- Botón de crear cuenta -->
        <Button
            android:id="@+id/btnCreateAccount"
            style="@style/LoginButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear cuenta" />

        <!-- Botón de Volver para iniciar sesión -->
        <Button
            android:id="@+id/btnGoToLogin"
            style="@style/LoginSecondaryButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver" />

    </LinearLayout>

    <include
        android:id="@+id/includeFooter"
        layout="@layout/include_footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
