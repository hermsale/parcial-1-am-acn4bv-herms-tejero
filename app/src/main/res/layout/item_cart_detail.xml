<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_md"
    android:layout_marginBottom="@dimen/spacing_sm"
    android:background="@drawable/bg_item">

    <!-- ========================================================= -->
    <!-- FILA SUPERIOR: Imagen, textos descriptivos y controles de cantidad -->
    <!-- ========================================================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Miniatura del producto -->
        <ImageView
            android:id="@+id/ivThumb"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/sample_print_bw"
            android:contentDescription="@string/img_desc" />

        <!--
            Bloque central: Nombre, descripciÃ³n y precios (unitario y total).
            Ocupa el espacio restante gracias a layout_weight=1.
        -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_sm">

            <!-- Nombre del producto -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del producto"
                android:textStyle="bold"
                android:textColor="@color/brand_text_primary"
                android:singleLine="true"
                android:ellipsize="end" />

            <!-- DescripciÃ³n breve -->
            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n"
                android:textColor="@color/brand_text_primary"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Precio unitario -->
            <TextView
                android:id="@+id/tvUnitPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$ 0 (unitario)"
                android:textColor="@color/brand_text_primary" />

            <!-- Total calculado del Ã­tem -->
            <TextView
                android:id="@+id/tvItemTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Ã­tem: $ 0"
                android:textStyle="bold"
                android:textColor="@color/brand_text_primary" />
        </LinearLayout>

        <!--
            Controles de cantidad: botones â€œâ€“â€ y â€œ+â€ con valor central.
            Compactos y con esquinas redondeadas (cornerRadius=8dp).
        -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/spacing_xs">

            <!-- BotÃ³n menos (-) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMinus"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:text="-"
                android:textSize="18sp"
                app:cornerRadius="8dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <!-- Cantidad actual -->
            <TextView
                android:id="@+id/tvQty"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textSize="16sp"
                android:layout_marginHorizontal="@dimen/spacing_xs" />

            <!-- BotÃ³n mÃ¡s (+) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlus"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:text="+"
                android:textSize="18sp"
                app:cornerRadius="8dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <!-- ðŸ—‘ï¸ BotÃ³n eliminar Ã­tem -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRemoveItem"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:icon="@drawable/baseline_delete_24"
            app:iconTint="@color/brand_red"
            app:cornerRadius="8dp"
            android:contentDescription="delete_item"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_marginStart="@dimen/spacing_xs" />
        </LinearLayout>
    </LinearLayout>

    <!-- ========================================================= -->
    <!-- FILA INFERIOR: Botones de acciÃ³n (â€œSubir PDFâ€ / â€œRealizar pedidoâ€) -->
    <!-- ========================================================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="@dimen/spacing_sm">

        <!--
            BotÃ³n opcional visible solo para productos â€œcopyBasedâ€
            (detectan nÃºmero de copias desde un archivo PDF).
        -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDetectFromPdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_pdf"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/spacing_sm" />

        <!--
            BotÃ³n para confirmar el pedido del Ã­tem actual.
            Color verde de marca para acciÃ³n principal.
        -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlaceOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/place_order"
            android:backgroundTint="@color/brand_green" />
    </LinearLayout>
</LinearLayout>
