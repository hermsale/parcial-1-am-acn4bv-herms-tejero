<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_background">

    <!-- NAVBAR FIJO ARRIBA -->
    <include
        android:id="@+id/includeNavbar"
        layout="@layout/include_navbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CONTENIDO SCROLLEABLE DEBAJO DEL NAVBAR -->
    <ScrollView
        android:id="@+id/profileScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/includeNavbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TITULO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis datos"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/brand_brown"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- FORM CAMPOS -->
            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"/>

            <EditText
                android:id="@+id/etApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellido"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:enabled="false"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/etTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Teléfono"
                android:inputType="phone"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/etDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dirección"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginTop="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cambiar contraseña"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/brand_brown"
                android:textColor="@android:color/white"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar cambios"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/brand_green"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </ScrollView>

    <!-- OVERLAY (siempre sobre todo) -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:visibility="gone"/>

    <!-- TOP SHEET (sobre el overlay) -->
    <include
        android:id="@+id/topSheet"
        layout="@layout/layout_top_sheet_menu"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>
